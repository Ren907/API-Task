@model API_Task.Models.Rootobject
@{
    ViewBag.Title = "AdviceSlipSearchView";
}

<h2>AdviceSlipSearchView</h2>

@using (Html.BeginForm("AdviceSlipSearchView", "AdviceSlipSearch", FormMethod.Post))
{
    @Html.TextBox("SearchName")
    <br />
    <br />
    <input type="submit" value="Search" />

}

    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("id")
            </th>
            <th>
                @Html.DisplayName("advice")
            </th>
            <th>
                @Html.DisplayName("date")
            </th>

            <th></th>
        </tr>

        @if (Model == null)
        {
            
        }
        else
        {

            foreach (var item in Model.slips)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.advice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>


                </tr>
            }
        }
        </table>
